  	<link href="<%= url_for '/css/uwmetadataeditor.css' %>" rel="stylesheet">
  	<link href="<%= url_for '/css/main.css' %>" rel="stylesheet">
  	
  	
  </head>	
  <body data-ng-app="uwmetadataeditorApp" data-ng-controller="UwmetadataeditorCtrl" data-ng-init="init()">
  
  	<!--[if lt IE 7]>
      <p class="chromeframe">You are using an outdated browser. <a href="http://browsehappy.com/">Upgrade your browser today</a>.</p>
    <![endif]-->

    <!--[if lt IE 9]>
      <script src="<%= url_for '/js/es5-shim.js' %>"></script>
      <script src="<%= url_for '/js/json3.min.js' %>"></script>
    <![endif]-->
    
    <script type="text/javascript">
            $(document).ready(function(){
                
				$('#resetEditor').click(function(){
					var app = document.getElementById('UwmetadataeditorCtrl');
					var scope = angular.element(app).scope();
					scope.$apply(function() {
						scope.resetEditor();
					});     
				});
				
				$('.datepicker').datepicker();
                
            });
        </script>

	<header id="overview" class="hero-unit">
        <div class="container">
            <h1>
                <span class="phaidra-title">Phaidra</span> <%=l 'Metadata Editor' %>
                <img class="load-spinner" ng-show="loadingTracker.active()" src="../img/ajax-loader.gif">
            </h1>
			
            <p><%=l 'Full version' %></p>

            <div class="btn-group jumbotron-buttons">
                <!-- External Call to an AngularJS controller -->
                <button type="button" class="btn btn-primary right" data-ng-click="getMetadataTree()"><i class="glyphicon glyphicon-pencil"></i> Load editor</button>
        		<!--<button class="btn btn-danger right" id="resetEditor"><i class="glyphicon glyphicon-refresh"></i> Reset editor</button>-->
        		<a href="https://github.com/phaidra/phaidra-api" class="btn btn-default"><i class="glyphicon icon-github"></i>  Code on Github</a>
            </div>
        
        </div>
    </header>
  
  
  	<%# ######### Content ########## %> 
  	<%= content %>
  	<%# ############################ %> 

  	
  	<footer class="footer">  	
  		<div class="container">
