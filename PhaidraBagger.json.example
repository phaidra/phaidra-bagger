{

    "installation_id": "nice_n_unique",

    "hypnotoad": {

        "listen": ["http://*:3001"],

        "proxy": 1
    },

	"mode":"production",

	"secret":"changeme",

	"enc_key":"changeme",

	"session_expiration":"7200",

	"secure_cookies":"1",

  "log_path":"/var/log/phaidra/PhaidraBagger.log",

  "log_level":"debug",

  "bagger_agent_path":"/var/www/bagger/lib/PhaidraBaggerAgent/phaidra_bagger_agent.pl",

  "validate_uwmetadata":"1",

  "defaults": {

    	"metadata_field_language": "de"
	},

    "projects": {
        "p1": {
            "account": "username",
            "members": [
	            		{
		            		"username": "username",
		            		"displayname": "chuck",
		            		"role": "manager"
	            		},
	            		{
		            		"username": "username",
		            		"displayname": "steven",
		            		"role": "member"
	            		}
            		],
            "bags": {
                "in": "/var/www/bagger/data/p1/bags/in",
                "out": "/var/www/bagger/data/p1/bags/out"
            },
            "folders": {
                "in": "/var/www/bagger/data/p1/folders/in",
                "uwmetadata_import": "/var/www/bagger/data/p1/folders/in"
            },
	    "import_url": "import-sub-app",
            "thumbnails": {
		    	"dir": "/var/www/bagger/public/thumbnails/p1",
		    	"url_path": "thumbnails/p2",
		    	"convert_cmd": "convert",
		    	"thumbnail_medium_cmd": "/var/www/bagger/lib/downsize -s 2048 -t 20",
		    	"thumbnail_small_cmd": "/var/www/bagger/lib/downsize -s 60 -t 20"
		    },
		    "redmine_baseurl": "https://redmine.phaidra.org/redmine/"

        },
        "p2": {
            "account": "username",
            "members":  [
	            		{
		            		"username": "username",
		            		"role": "manager"
	            		},
	            		{
		            		"username": "username",
		            		"role": "manager"
	            		}
            		],
            "statuses":  [
	            		{
		            		"label": "New",
		            		"value": "new"
	            		},
	            		{
		            		"label": "Fixed",
		            		"value": "fixed"
	            		}
            		],
            "default_assignee": "username",
            "restricted_operations": ["set_assignee"],
            "restricted_actions": ["POST /job/"],
            "bags": {
                "in": "/var/www/bagger/data/p2/bags/in",
                "out": "/var/www/bagger/data/p2/bags/out"
            },
            "thumbnails": {
		    	"dir": "/var/www/bagger/thumbnails/p2",
		    	"url_path": "thumbnails/p2",
		    	"convert_cmd": "convert",
		    	"thumbnail_medium_cmd": "/var/www/bagger/lib/downsize -s 2048 -t 20",
		    	"thumbnail_small_cmd": "/var/www/bagger/lib/downsize -s 60 -t 20"
		    },
		    "redmine_baseurl": "https://redmine.phaidra.org/redmine/"
        }
    },
    
    "solr": {
    	"baseurl": "localhost:8983/solr/bagger",
        "enable_indexing": 1,
    	"fields":  [
            { "value": "assignee", "label": "assignee"},
            { "value": "bagid", "label": "bag id"},
            { "value": "created", "label": "created"},
            { "value": "dc_creator", "label": "creator"},
            { "value": "dc_date", "label": "date"},
            { "value": "dc_description", "label": "description"},
            { "value": "folderid", "label": "folder id"},
            { "value": "dc_identifier", "label": "identifier"},
            { "value": "label", "label": "label"},
            { "value": "dc_language", "label": "language"},
            { "value": "dc_publisher", "label": "publisher"},
            { "value": "dc_relation", "label": "relation"},
            { "value": "dc_rights", "label": "rights"},
            { "value": "status", "label": "status"},
            { "value": "dc_subject", "label": "subject"},
            { "value": "tags", "label": "tags"},
            { "value": "dc_title", "label": "title"},
            { "value": "dc_title_en", "label": "title english"},
            { "value": "dc_title_de", "label": "title german"},
            { "value": "updated", "label": "updated"}
        ]
    },

    "ingest_instances": {
        "phaidra-instance": {
            "baseurl": "phaidra-instance.univie.ac.at",
            "apibaseurl": "services.phaidra-instance.univie.ac.at/api",
            "metadata_format_version": "1",
            "local_uwmetadata_tree": "/var/www/bagger/public/uwmetadata/tree.json",
            "local_mods_tree": "/var/www/bagger/public/mods/tree.json",
            "is_default": "1"
         },
        "phaidra-instance2": {
            "baseurl": "phaidra-instance2.univie.ac.at",
            "apibaseurl": "services.phaidra-instance2.univie.ac.at/api",
            "metadata_format_version": "1",
            "local_uwmetadata_tree": "/var/www/bagger/public/uwmetadata/tree.json",
            "is_default": "0"
        }
    },

    "directory_user": {
      "username": "username",
      "password": "password"
    },

    "mongodb": {
        "host": "host",
        "port": "27017",
        "username": "username",
        "password": "password",
        "database": "database"
    },

    "authentication": {
    	"realm": "Phaidra",
    	"token_header": "X-XSRF-TOKEN",
        "token_cookie": "XSRF-TOKEN"
    }
}
